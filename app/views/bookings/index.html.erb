<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Seat class</th>
      <th>Journey price</th>
      <th>User origin</th>
      <th>User destination</th>
      <th>Flight</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.seat_class %></td>
        <td><%= booking.journey_price %></td>
        <td><%= booking.user_origin %></td>
        <td><%= booking.user_destination %></td>
        <td><%= booking.flight_id %></td>
        <td><%= booking.User_id %></td>
        <td><%= link_to 'Show', booking %></td>
        <% if current_user && current_user.is_admin %>
          <div>
            <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
            <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
